<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>security-management-base</artifactId>
    <name>Security Management Base</name>
    <packaging>jar</packaging>

    <organization>
        <name>QBSW a.s.</name>
        <url>http://www.qbsw.sk</url>
    </organization>

    <parent>
        <groupId>sk.qbsw.security</groupId>
        <artifactId>security-top</artifactId>
        <version>2.5.0-SNAPSHOT</version>
    </parent>

    <dependencies>
        <!-- QBSW core -->
        <dependency>
            <groupId>sk.qbsw.core</groupId>
            <artifactId>core-base</artifactId>
        </dependency>
        <dependency>
            <groupId>sk.qbsw.core</groupId>
            <artifactId>core-persistence</artifactId>
        </dependency>

        <!-- QBSW security -->
        <dependency>
            <groupId>sk.qbsw.security</groupId>
            <artifactId>security-base</artifactId>
        </dependency>
        <dependency>
            <groupId>sk.qbsw.security</groupId>
            <artifactId>security-core</artifactId>
        </dependency>
        <dependency>
            <groupId>sk.qbsw.security</groupId>
            <artifactId>security-management</artifactId>
        </dependency>

        <!-- hibernate -->
        <dependency>
            <groupId>org.hibernate.javax.persistence</groupId>
            <artifactId>hibernate-jpa-2.1-api</artifactId>
        </dependency>

        <!-- logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.properties</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <optimize>true</optimize>
                    <debug>true</debug>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
