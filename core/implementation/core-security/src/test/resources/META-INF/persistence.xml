<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="persistenceContext"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!-- security -->
		<class>sk.qbsw.core.security.model.domain.CUser</class>
		<class>sk.qbsw.core.security.model.domain.CRole</class>
		<class>sk.qbsw.core.security.model.domain.CGroup</class>
		<class>sk.qbsw.core.security.model.domain.COrganization</class>
		<class>sk.qbsw.core.security.model.domain.CUnit</class>
		
		<properties>
			<property name="hibernate.dialect" value="sk.qbsw.core.persistence.dialect.CSQLServer2012Dialect" />
			<property name="hibernate.bytecode.provider" value="javassist" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.jdbc.batch_size" value="200" />
		</properties>
	</persistence-unit>
</persistence>