<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>security-organization-spring-simple-oauth-rest-spring-boot-starter</artifactId>
    <name>Security Organization Spring Simple OAuth REST Spring Boot Starter</name>
    <packaging>jar</packaging>

    <organization>
        <name>QBSW a.s.</name>
        <url>http://www.qbsw.sk</url>
    </organization>

    <parent>
        <groupId>sk.qbsw.security.organization.spring</groupId>
        <artifactId>security-organization-spring-top</artifactId>
        <version>2.5.0-SNAPSHOT</version>
    </parent>

    <dependencies>
        <!-- QBSW security -->
        <dependency>
            <groupId>sk.qbsw.security.organization.spring</groupId>
            <artifactId>security-organization-spring-simple-oauth-rest</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <inherited>true</inherited>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <optimize>true</optimize>
                    <debug>true</debug>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
